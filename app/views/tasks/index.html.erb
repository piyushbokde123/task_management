<!-- app/views/tasks/index.html.erb -->
<div lass="container-fluid"> 
  <h1 class="mx-auto" style="width: 30rem;">Tasks</h1>
</div>
<% flash.each do |type, msg| %>
  <div class="mx-auto" style="width: 30rem;">
    <%= msg %>
  </div>
<% end %>

<div lass="container-fluid">
<div class="mx-auto" style="width: 30rem;">
  <%= form_with(model: @new_task, url: tasks_path, method: :post, class: "needs-validation", novalidate: true) do |form| %>
    <div class="form-group">
      <%= form.label :title, class: "form-label" %>
      <%= form.text_field :title, class: "form-control", required: true %>
      <div class="invalid-feedback">
        Please provide a title.
      </div>
    </div>
    <div class="form-group">
      <%= form.label :description, class: "form-label" %>
      <%= form.text_area :description, class: "form-control", required: true %>
      <div class="invalid-feedback">
        Please provide a description.
      </div>
    </div>
    <div class="form-group">
      <%= form.label :status, class: "form-label" %>
      <%= form.select :status, options_for_select(["To Do", "In Progress", "Done"], @selected_status), { prompt: "Select Status" }, class: "form-control" %>
      <div class="invalid-feedback">
        Please select a status.
      </div>
    </div></br>
    <div class="form-group ">
      <%= form.submit "Create Task", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
</div>


<div>
  <h2>Task List</h2>
  <%= form_with(url: tasks_path, method: :get) do %>
    <%= select_tag(:status, options_for_select(@statuses, @selected_status), onchange: 'this.form.submit();') %>
  <% end %>
  <table class="table table-dark">
    <thead>
      <tr>
        <th scope="col">Title</th>
        <th scope="col">Description</th>
        <th scope="col">Status</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= task.title %></td>
          <td><%= task.description %></td>
          <td><%= task.status %></td>
          <td>
            <%= link_to 'Edit', edit_task_path(task) %> |
            <%= link_to 'Delete', task_path(task), method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>


