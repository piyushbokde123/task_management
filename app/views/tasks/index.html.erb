<!-- app/views/tasks/index.html.erb -->
<div lass="container-fluid"> 
  <h1 class="mx-auto" style="width: 30rem;">Tasks</h1>
</div>
<% flash.each do |type, msg| %>
  <div class="mx-auto" style="width: 30rem;">
    <%= msg %>
  </div>
<% end %>

<%= render 'form' %>

<div>
  <h2>Task List</h2>
  <%= form_with(url: tasks_path, method: :get) do %>
    <%= select_tag(:status, options_for_select(@statuses, @selected_status), onchange: 'this.form.submit();') %>
  <% end %>
  <table class="table table-dark">
    <thead>
      <tr>
        <th scope="col">Title</th>
        <th scope="col">Description</th>
        <th scope="col">Status</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= task.title %></td>
          <td><%= task.description %></td>
          <td><%= task.status %></td>
          <td>
            <%= button_to "Edit", edit_task_path(task), method: :get %> |
            <%= button_to "Delete", task, method: :delete, data: { confirm: "Are you sure?" }, remote: true, class: 'delete_pony' %>

          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>


